gem 'slop', "~> 3.6"
require 'slop'
require 'nokogiri'
require 'epitools'

###########################################################

ROOT_URL = "https://torrentz2.eu/"

TRACKERS = %w[
  http://opentrackr.org/announce
  http://tracker.opentrackr.org:1337/announce
  udp://tracker.coppersurfer.tk:6969/announce
