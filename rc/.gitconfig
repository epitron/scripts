[user]
  name = epitron
  email = chris@ill-logic.com

[github]
  user = epitron

[push]
  default = current

[diff]
  algorithm = histogram

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p

[branch]
  autosetupmerge = true

[merge]
  tool = meld

[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[log]
	date = local
