#!/usr/bin/env ruby
require 'epitools'

class String
  def url?
    !!(strip =~ %r{^https?://.+})
  end
end

def despam(link)
  uri = URI.parse(link)

  urls = if uri.host[/youtu(be)?/] and uri.path["attribution_link"] and uri.params["u"]
    ["https://youtube.com#{uri.params["u"]}"]
  else
    uri.params.values.map do |val|
      if val.url?
        val
      elsif (decoded = val.from_base64).url?
        decoded
      else
        nil
      end
    end.compact
  end

  rawquery = uri.instance_variable_get(:@query)
  query = CGI.unescape(rawquery)
  urls << query if query.url?

  urls
end

def show_links_for(url)
  puts "Extracted links:"
  links = despam(url)

  if links.any?
    links.each { |link| puts "\t#{link}" }
  else
    puts "\tnone found"
  end
end

if $0 == __FILE__

  args = ARGV

  if args.any?
    args.each do |arg|
      show_links_for arg
    end
  else
    loop do
      print "Paste link: "
      break if (url = gets&.strip).blank?
      show_links_for url
      puts
    end
  end

end
